<div class="col-md-4 mx-auto">
<div class="card card-body">
    <form action="/books/add" method="POST">
        <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Book Title" autofocus required>
        </div>
         <div class="form-group">
            <input type="text" name="author" class="form-control" placeholder="Book author" autofocus required>
        </div>
         <div class="form-group">
            <input type="text" name="isbn" pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}
" class="form-control" placeholder="isbn" required >
        </div>
        <button class="btn btn-primary btn-block">
            Save
        </button>
    </form>
</div>
</div >
